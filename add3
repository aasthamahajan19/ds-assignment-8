#include <iostream>
#include <vector>
#include <queue>
using namespace std;

struct Node{
    int data;
    Node* left;
    Node* right;
    Node(int x){ data = x; left = right = NULL; }
};

Node* buildTree(vector<int> &v){
    if(v.size() == 0 || v[0] == -1) return NULL;

    Node* root = new Node(v[0]);
    queue<Node*> q;
    q.push(root);

    int i = 1;
    while(!q.empty() && i < v.size()){
        Node* curr = q.front();
        q.pop();

        if(v[i] != -1){
            curr->left = new Node(v[i]);
            q.push(curr->left);
        }
        i++;

        if(i < v.size() && v[i] != -1){
            curr->right = new Node(v[i]);
            q.push(curr->right);
        }
        i++;
    }
    return root;
}

int maxDepth(Node* root){
    if(!root) return 0;
    return 1 + max(maxDepth(root->left), maxDepth(root->right));
}

int main(){
    vector<int> arr = {1,2,3,4,5,6,-1,-1,-1,7,-1,8};
    Node* root = buildTree(arr);
    cout << maxDepth(root);
}
