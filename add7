#include <iostream>
#include <vector>
using namespace std;

struct Node{
    int data;
    Node* left;
    Node* right;
    Node(int x){ data = x; left = right = NULL; }
};

// -------- Convert BST to sorted array --------
void inorder(Node* root, vector<int> &v){
    if(!root) return;
    inorder(root->left, v);
    v.push_back(root->data);
    inorder(root->right, v);
}

// -------- Build Doubly Linked List --------
struct DLL{
    int data;
    DLL* prev;
    DLL* next;
    DLL(int x){ data = x; prev = next = NULL; }
};

